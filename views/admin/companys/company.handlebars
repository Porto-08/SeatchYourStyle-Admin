
<section id="companyRegistered">
        <div class="row">
            <div class="col-sm-12 text-white">
                <div class="card justify-content-center">
                    <div class="bg-info card-header">
                        <h2>Patrocinadores</h2>
                    </div>
                    <div class="card-body bg-dark text-center">
                        <h4>Totais de Patrocinadores desde Sempre:</h4>
                        <h2 class="">
                            {{company.length}}
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <hr>

    <a href="/admin/addcompany">
        <button class="btn btn-outline-info mb-3">
            Nova Patrocinador       
        </button>
    </a>

    <section id="allCompanys" class="text-white mb-3">
        <div class="row">
            <div class="col-sm-12">
                <div class="card ">
                    <div class="card-header bg-info">
                        <h2>Todos os Patrocinadores: </h2>
                        <small>Você pode excluir um Patrocinador, mas não pode errar!</small>
                    </div>
                    
                
                
                    <div class="card-body bg-dark">
                        <table class="table table-dark table-hover table-reponsive-sm">
                            <thead>
                                <tr>
                                    <th class="h4">ID</th>
                                    <th class="h4">Nome</th>
                                    <th class="h4">Empresa</th>
                                    <th class="h4">Tempo(meses)</th>
                                    <th class="h4">Pagamento</th>
                                    <th class="h4">Editar</th>
                                    <th class="h4">Excluir</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                {{#each company}}
                                    <tr>
                                        <td>
                                            {{_id}}
                                        </td>

                                        <td>
                                            {{name}}
                                        </td>

                                        <td>
                                            {{company}}
                                        </td>

                                        <td>
                                            {{time}} Meses
                                        </td>

                                        <td>
                                            R$ {{payment}},00
                                        </td>

                                        <td>
                                            <a href="/admin/editcompany/{{_id}}">
                                                <button class="btn btn-outline-info">
                                                    <i class="far fa-edit"></i>
                                                </button>
                                            </a>
                                        </td>

                                        <td>
                                            <form action="/admin/deletecompany/{{_id}}" class="d-inline" method="post">
                                                <input type="hidden" name="id" id="{{_id}}">
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="far fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>

                                    
                                {{else}}
                                    <tr>
                                        <td>
                                            <h3>Sem Patrocinadores Registrados!</h3>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                </div>                
            </div>
        </div>
    </section>
</section>