
<div class="container">

   <h2>Serviços</h2>

   <hr>


   <a href="/admin/addcategories">
        <button class="btn btn-outline-info">
            Novo Serviço       
        </button>
    </a>

    {{#each categories}}
        <div class="card mt-4 mb-2 bg-info">
            <div class="card-header text-white">
                <h4>{{name}}</h4>
            </div>

            <div class="card-body bg-dark text-white">
                <small>URL: {{slug}}</small><br>
                <small>Data de criação: {{date}}</small><br><br>
                <a href="/admin/editcategories/{{_id}}">
                    <button class="btn btn-outline-info mt-2 mb-2">
                        <i class="far fa-edit"></i>
                    </button>
                </a>
                <form action="/admin/deletecategories/{{_id}}" class="d-inline" method="post">
                        <input type="hidden" name="id" id="{{_id}}">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="far fa-trash-alt"></i>
                        </button>
                </form>
            </div>            
        </div>
        
    {{else}}
        <h4 class="mt-3">Nenhuma categoria registrada</h4>
    {{/each}}

</div>



