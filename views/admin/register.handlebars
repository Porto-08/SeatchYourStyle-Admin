    <div class="col-sm-12">
        <div class="card text-white">
            <div class="card-header bg-info">
                <h2>Cadastre o ademir novo!</h2>
            </div>
            <div class="card-body bg-dark">
                <form action="/admin/register" method="POST">
                    <div class="form-group">
                        <label for="name">Nome:</label>
                        <input type="text" name="name" class="form-control" placeholder="Nome.." id="name" autofocus>
                            {{#each err_name}}
                                <div class="h6 mt-2 ml-1 text-danger">
                                    {{text}}
                                </div>
                            {{else}}

                            {{/each}}
                    </div>

                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" name="email" class="form-control" placeholder="Email.." id="email" autofocus>
                        {{#each err_email}}
                            <div class="h6 mt-2 ml-1 text-danger">
                                    {{text}}
                            </div>
                        {{else}}

                        {{/each}}  
                    </div>
                    <div class="form-group">
                        <label for="password">Senha:</label>
                        <input type="password" name="password" class="form-control" placeholder="Senha.." id="password">
                        {{#each err}}
                            <div class="h6 mt-2 ml-1 text-danger">
                                    {{text}}
                            </div>
                        {{else}}

                        {{/each}}
                    </div>

                    <div class="form-group">
                        <label for="password_2">Confirme sua Senha:</label>
                        <input type="password" name="password_2" class="form-control" placeholder="Confirmar Senha.." id="password_2">
                        {{#each err}}
                            <div class="h6 mt-2 ml-1 text-danger">
                                    {{text}}
                            </div>
                        {{else}}

                        {{/each}}
                    
                    </div>
                    <button type="submit" class="btn btn-outline-info" >Cadastrar</button>
                </form>
            </div>
        </div>
    </div>

        

    
    


